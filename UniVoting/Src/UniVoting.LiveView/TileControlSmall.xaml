<UserControl x:Class="UniVoting.LiveView.TileControlSmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniVoting.LiveView"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <controls:Tile TitleFontSize="28" Name="Tile" Title="position"
                        VerticalTitleAlignment="Top"
                       Foreground="White"
                       Background="DodgerBlue"
                       HorizontalTitleAlignment="Center"
                    Width="150" Height="120">
            <Label FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Name="VoteCount"
                   FontFamily="Segoe Ui Bold" Margin="0,50,0,0"
                   Foreground="White">800</Label>
        </controls:Tile>
    </Grid>
</UserControl>
