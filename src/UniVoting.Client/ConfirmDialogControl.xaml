<UserControl
    x:Class="UniVoting.Client.ConfirmDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UniVoting.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="TextBoxConfirm"
            Margin="5"
            HorizontalAlignment="Center"
            FontFamily="Segoe Ui semibold"
            FontSize="20"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="Are you sure you want to vote for "
            TextWrapping="WrapWithOverflow" />
        <Image
            Name="CandidateImage"
            Grid.Row="1"
            Width="250"
            HorizontalAlignment="Center"
            Source="/Resources/images/user.png" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <ui:Button
                Name="BtnNo"
                Width="100"
                Height="40"
                Margin="10"
                Appearance="Secondary"
                Content="NO"
                FontSize="20"
                TabIndex="1"
                ToolTip="Vote no" />
            <ui:Button
                Name="BtnYes"
                Width="100"
                Height="40"
                Margin="10"
                Appearance="Primary"
                Content="YES"
                FontSize="20"
                TabIndex="0"
                ToolTip="Vote yes" />
        </StackPanel>
    </Grid>
</UserControl>
