<UserControl x:Class="UniVoting.Client.YesOrNoCandidateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniVoting.Client"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             Width="250">
    <ui:Card Margin="3" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock TextWrapping="WrapWithOverflow"  TextAlignment="Center" FontSize="20" Grid.Row="1" Name="CandidateName" 
                       Style="{StaticResource SubtitleTextBlockStyle}" FontFamily="Segoe Ui semibold" Margin="-2,0,0,0" 
                       HorizontalAlignment="Left" Width="240" FontWeight="Bold">Candidate Name</TextBlock>
            <Image Name="CandidateImage" Grid.Row="2" Source="/Resources/images/user.png"></Image>
            <Label Grid.Row="3" FontSize="18" Style="{StaticResource SubtitleTextBlockStyle}"
                       VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Center"
                       FontFamily="Segoe Ui Light">Vote YES or NO</Label>
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
               
                <ui:Button Grid.Row="3" HorizontalAlignment="Right" FontSize="20"
                           Appearance="Primary" Margin="10" Height="40" Name="BtnVoteYes"
                           TabIndex="6" Content="YES" />

                <ui:Button Grid.Row="3" HorizontalAlignment="Left" FontSize="20"
                           Appearance="Secondary" Margin="10" Height="40" Name="BtnVoteNo"
                           TabIndex="6" Content="NO" />
           
            </StackPanel>
            <Label x:Name="Rank" Content="2" HorizontalAlignment="Left" FontSize="30" 
                   Style="{StaticResource SubtitleTextBlockStyle}" FontFamily="Segoe Ui bold"  
                   VerticalAlignment="Top" Grid.Row="2"/>
        </Grid>
    </ui:Card>
</UserControl>
