<ui:FluentWindow
    x:Class="UniVoting.Client.ClientsLoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="UNIVOTING"
    Width="525"
    Height="350"
    ResizeMode="NoResize"
    Topmost="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">

    <ui:Card Margin="3" VerticalAlignment="Stretch">
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <ui:SymbolIcon
                        Width="50"
                        Height="50"
                        Margin="10"
                        Symbol="Key24" />
                    <ui:TextBox
                        Name="Pin"
                        Width="260"
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="24"
                        PlaceholderText="Enter Code Here.."
                        TabIndex="0" />
                </StackPanel>
                <ui:Button
                    x:Name="BtnGo"
                    Width="47"
                    Height="43"
                    Margin="10,10,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Appearance="Primary"
                    Content="Go"
                    FontSize="24"
                    TabIndex="1"
                    ToolTip="Go" />
            </StackPanel>
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock
                    Name="VotingName"
                    Margin="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Bold"
                    FontSize="70"
                    Style="{StaticResource TitleTextBlockStyle}"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow">
                    VOTING NAME
                </TextBlock>
                <Label
                    Name="VotingSubtitle"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Voting Subtitle"
                    FontFamily="Segoe UI Bold"
                    FontSize="40"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
            </StackPanel>

        </Grid>
    </ui:Card>
</ui:FluentWindow>
