<UserControl x:Class="UniVoting.Admin.Administrators.AddPositionDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniVoting.Admin.Administrators"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="20" Grid.Row="0" FontFamily="Segoe Ui Light" HorizontalAlignment="Center">Create Position</Label>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ui:TextBox Foreground="{DynamicResource SystemAccentColorBrush}" Width="260" 
                        PlaceholderText="position" FontSize="24" Margin="10" 
                        Name="TextBoxPosition" TabIndex="0" VerticalAlignment="Center" />
            <ui:TextBox Foreground="{DynamicResource SystemAccentColorBrush}" Width="260" 
                        PlaceholderText="faculty" FontSize="24" Margin="10" 
                        Name="TextBoxFaculty" TabIndex="0" VerticalAlignment="Center" />

        </StackPanel>
        <ui:Button x:Name="BtnSave" Content="Save" Appearance="Primary" HorizontalAlignment="Right" Margin="20" Width="80" Height="40" Grid.Row="2"
                   Grid.Column="0" />
        <ui:Button x:Name="BtnCancel" Content="Cancel" Appearance="Secondary" HorizontalAlignment="Left" Margin="20" Width="80" Height="40" Grid.Row="2"
                   Grid.Column="0" />
    </Grid>
</UserControl>
