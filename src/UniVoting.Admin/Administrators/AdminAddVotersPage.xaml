<Page x:Class="UniVoting.Admin.Administrators.AdminAddVotersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="AdminAddVotersPage">

    <ui:Card Margin="3" Padding="12" Height="583" Width="866">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Controls -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <ui:TextBox Width="250" HorizontalAlignment="Right" Name="Searchterm"
                                PlaceholderText="Search for voter" FontSize="16" 
                                Margin="30,0,0,20" TabIndex="0" />
                    <ui:Button HorizontalAlignment="Right" VerticalAlignment="Top"
                               Margin="5" Name="BtnSearch" TabIndex="2"
                               Appearance="Primary"
                               ToolTip="search for existing voter">
                        <ui:SymbolIcon Symbol="Search24" Margin="10" Width="30" Height="30" />
                    </ui:Button>
                </StackPanel>
                
                <!-- Title -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label FontSize="36" FontFamily="Segoe Ui Light" HorizontalAlignment="Center">Setup Voters</Label>
                </StackPanel>
            </Grid>
            
            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Input Form -->
                <ScrollViewer Padding="5" Grid.Column="0" Margin="5">
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ui:TextBox Grid.Row="0" Width="250" PlaceholderText="Fullname" 
                                    FontSize="16" Margin="10" Name="TextBoxName" TabIndex="2" />

                        <ui:TextBox Grid.Row="1" Width="250" PlaceholderText="Index Number" 
                                    FontSize="16" Margin="10" Name="TextBoxIndexNumber" TabIndex="3" />
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <ui:Button HorizontalAlignment="Left" FontSize="16"
                                       Appearance="Secondary" Margin="10" Height="40" Name="BtnImportFile"
                                       TabIndex="6" ToolTip="import voters for file"
                                       Content="Import From File" />
                            <ui:Button FontSize="14" HorizontalAlignment="Right"
                                       Appearance="Primary" Margin="10" Height="40" 
                                       Name="BtnSave" TabIndex="5" ToolTip="Save Voter"
                                       Content="Save" />
                        </StackPanel>
                        
                        <Label FontSize="14" Grid.Row="3" Name="ImportedFilename" 
                               FontFamily="Segoe Ui Light" HorizontalAlignment="Left">Imported Filename:</Label>
                        <Label FontSize="14" Grid.Row="4" Visibility="Hidden" Name="AddedCount" 
                               FontFamily="Segoe Ui Light" HorizontalAlignment="Left">Added:</Label>
                    </Grid>
                </ScrollViewer>
                
                <!-- Data Grid -->
                <DataGrid Grid.Column="1" AlternatingRowBackground="MediumSlateBlue" Name="VoterGrid" 
                          Margin="0,10,10,10" AutoGenerateColumns="True" FontSize="16"
                          Style="{StaticResource AzureDataGrid}" Grid.RowSpan="2" />
                
                <!-- Reset Controls -->
                <ui:TextBox x:Name="ResetIndexNumber" 
                            PlaceholderText="Enter Student Number to Reset" 
                            HorizontalAlignment="Left" Height="54" Margin="10,33.074,0,0" 
                            TextWrapping="Wrap" VerticalAlignment="Top" Width="376" 
                            Grid.Row="1" Grid.Column="0" />
                
                <ui:Button x:Name="BtnReset" Content="Reset" 
                           Appearance="Primary"
                           HorizontalAlignment="Right" Margin="20" Width="72" Height="40" 
                           Grid.Row="2" Grid.Column="0" Click="BtnReset_Click" />
            </Grid>
        </Grid>
    </ui:Card>
</Page>