<ui:FluentWindow x:Class="UniVoting.Admin.Administrators.AdminLoginWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                      Title="UNIVOTING"
                WindowState="Maximized"
                WindowBackdropType="Mica"
                TextElement.FontWeight="Medium"
                TextElement.FontSize="16">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/images/univoting_bg_1.png" TileMode="Tile" Opacity="0.2"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label  Foreground="{DynamicResource AccentColorBrush}"  FontFamily="Segoe UI Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42">UNIVOTING</Label>
            <Label  Foreground="{DynamicResource AccentColorBrush}" FontFamily="Segoe UI Light"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Comprehensive Voting App For Desktop And Mobile</Label>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon Symbol="Person24" Grid.Row="0" Grid.Column="0"
                                 Margin="10" Width="50" Height="50" />
                <ui:TextBox Grid.Row="0" Grid.Column="1" Width="250"
                     PlaceholderText="Username" FontSize="24" Margin="10" Name="Username" TabIndex="0" />

                <ui:SymbolIcon Symbol="Key24" Grid.Row="1" Grid.Column="0"
                                 Margin="10" Width="50" Height="50" />
                <ui:PasswordBox Grid.Row="1" Grid.Column="1" Width="250"
                     PlaceholderText="Password" FontSize="24" Margin="10" Name="Password" TabIndex="1" />

                <ui:Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="20"
                           Appearance="Primary" Margin="10" Height="40" Name="BtnLogin"
                           TabIndex="2" Content="Login"
                           ToolTip="Login" />
            </Grid>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
