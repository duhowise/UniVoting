<Page x:Class="UniVoting.Admin.Administrators.AdminSetUpPositionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniVoting.Admin.Administrators"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="AdminSetUpPositionPage">

    <ui:Card Margin="3" Padding="12" VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label FontSize="36" FontFamily="Segoe Ui Light" HorizontalAlignment="Center">Create Position</Label>
            <ScrollViewer Padding="5" Grid.Row="1">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                       
                    </Grid.ColumnDefinitions>
                    <StackPanel Name="PositionControlHolder" Grid.Row="0" Grid.Column="0"></StackPanel>
                   
                    <ui:Button Grid.Row="0" Grid.Column="1" FontSize="20"
                               Appearance="Secondary" Margin="10" Height="40" Name="BtnAdd"
                               TabIndex="0" Content="Add New Position"
                               ToolTip="add new position" Click="BtnAdd_Click" />
                </Grid>
            </ScrollViewer>
        </Grid>
    </ui:Card>
</Page>
