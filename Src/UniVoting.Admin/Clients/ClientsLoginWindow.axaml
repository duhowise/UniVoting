<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UniVoting.Admin.Clients.ClientsLoginWindow"
        WindowState="Maximized"
        Title="UNIVOTING">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <TextBlock Margin="10" Width="50" Height="50" VerticalAlignment="Center" Text="ðŸ”‘"/>
                    <TextBox Name="Pin" TabIndex="0" Width="250" Margin="10" FontSize="24" FontWeight="Bold" PasswordChar="*"/>
                </StackPanel>
                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Name="BtnGo" TabIndex="1">
                    <Label FontSize="24">GO</Label>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="0">
                <Label Name="VotingName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42">VOTING NAME</Label>
                <Label Name="VotingSubtitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Content="Voting Subtitle"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
