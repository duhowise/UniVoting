<Page x:Class="UniVoting.Admin.Administrators.AdminSetUpCandidatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UniVoting.Admin.Administrators"
      mc:Ignorable="d"
      Title="AdminSetUpCandidatesPage" Loaded="Page_Loaded">
    <Page.Resources>
        <DataTemplate x:Key="DataTemplateItem">
            <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4"
                    Padding="5" Margin="5" Width="400" Height="120">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding CandidatePicture}" Name="ImageName" Height="150" Width="150"/>
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                        <Label Content="{Binding CandidateName}" FontSize="18" FontFamily="Segoe UI Bold" HorizontalAlignment="Center"/>
                        <Label Content="{Binding Position}" FontSize="16" FontFamily="Segoe UI SemiBold" HorizontalAlignment="Center"/>
                        <Label Content="{Binding Rank}" FontSize="14" FontFamily="Segoe UI Light" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="36" FontFamily="Segoe UI Light" HorizontalAlignment="Center">Set Up Candidates</Label>
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4"
                    Padding="5" Margin="10" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Candidate image" Grid.Row="0" Margin="10,-65,0,75">
                        <StackPanel>
                            <Label FontSize="16" HorizontalAlignment="Center" Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Light">
                                image size should be 256x256
                            </Label>
                            <Image Name="CandidateImage" Width="250" Source="../Resources/images/people_on_the_beach_300x300.jpg" Height="250"/>
                            <Button FontSize="20" FontFamily="Segoe UI SemiBold" Margin="10" Height="40"
                                    Name="BtnUploadImage" TabIndex="3" ToolTip="Save" Click="BtnUploadImage_Click">
                                Upload image
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="Candidate's details" Grid.Row="0">
                        <StackPanel>
                            <TextBox Foreground="{DynamicResource SystemAccentColorBrush}" Width="260"
                                     FontSize="24" Margin="10" Name="CandidateName" TabIndex="0" VerticalAlignment="Center" />
                            <ComboBox DisplayMemberPath="PositionName" SelectedValuePath="Id" TabIndex="1"
                                      Name="PositionCombo" FontSize="24" Margin="10"
                                      Foreground="{DynamicResource SystemAccentColorBrush}" Width="260" />
                            <ComboBox TabIndex="2" Name="RankCombo" FontSize="24" Margin="10"
                                      Foreground="{DynamicResource SystemAccentColorBrush}" Width="260" />
                            <Button FontSize="20" FontFamily="Segoe UI SemiBold" Margin="10,65,10,5" Height="40"
                                    Name="SaveCandidate" TabIndex="3" ToolTip="Save Candidate">
                                Save Candidate
                            </Button>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Border>
            <ListBox Grid.Column="1" Margin="10" Height="600" Name="CandidatesList"
                     MouseDoubleClick="CandidatesList_OnMouseDoubleClick"
                     ItemTemplate="{DynamicResource DataTemplateItem}" IsSynchronizedWithCurrentItem="True" />
        </Grid>
    </Grid>
</Page>
