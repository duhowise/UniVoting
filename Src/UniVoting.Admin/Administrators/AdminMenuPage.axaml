                        <TextBlock HorizontalAlignment="Center" FontSize="40" Text="ðŸ”–"/>
                        <Label FontSize="14" HorizontalAlignment="Center">Dispense Password</Label>
                        <Label FontSize="12" HorizontalAlignment="Center">give out passwords to voters</Label>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </Grid>
    </Border>
</UserControl>
