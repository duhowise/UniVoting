<Window x:Class="UniVoting.Admin.Administrators.PresidentLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="PresidentLoginWindow">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/images/univoting_bg_1.png" TileMode="Tile" Opacity="0.2"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42">UNIVOTING</Label>
            <Label Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Light"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">President Login</Label>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon Symbol="Person24" Grid.Row="0" Grid.Column="0"
                               Margin="10" Width="50" Height="50"
                               Foreground="{DynamicResource SystemAccentColorBrush}" />
                <TextBox Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                         FontSize="24" Margin="10" Name="Username" TabIndex="0" />

                <ui:SymbolIcon Symbol="Key24" Grid.Row="1" Grid.Column="0"
                               Margin="10" Width="50" Height="50"
                               Foreground="{DynamicResource SystemAccentColorBrush}" />
                <PasswordBox Grid.Row="1" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                             FontSize="24" Margin="10" Name="Password" TabIndex="1" />

                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="20" FontFamily="Segoe UI Bold"
                        Margin="10" Height="40" Name="BtnLogin" TabIndex="2" ToolTip="Login">
                    Login
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
