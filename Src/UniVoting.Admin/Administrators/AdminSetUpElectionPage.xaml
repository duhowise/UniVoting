<Page x:Class="UniVoting.Admin.Administrators.AdminSetUpElectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UniVoting.Admin.Administrators"
      mc:Ignorable="d"
      Title="AdminSetUpElectionPage">
    <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="5" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label FontSize="36" FontFamily="Segoe UI Light" HorizontalAlignment="Center">Set Up Election</Label>
            <ScrollViewer Padding="5" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Header="Election Details" FontFamily="Segoe UI Light">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="0" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                                     FontSize="18" Margin="10" Name="TextBoxElectionName" TabIndex="1" />
                            <TextBox Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                                     FontSize="18" Margin="10" Name="TextBoxSubtitle" TabIndex="2" />

                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
                                <Label FontSize="16" HorizontalAlignment="Center" Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Light">
                                    Logo For The Election
                                </Label>
                                <Label FontSize="14" HorizontalAlignment="Center" Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Light">
                                    example departmentlogo.png / facultylogo.jpg
                                </Label>
                                <Label FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Light">
                                    image size should be 256x256
                                </Label>
                                <Image Name="Logo" Width="250" Source="../Resources/images/people_on_the_beach_300x300.jpg" Height="250"/>
                                <Button FontSize="20" FontFamily="Segoe UI Bold" Margin="10" Height="40"
                                        Name="BtnUploadImage" TabIndex="4" ToolTip="Upload image">
                                    Upload image
                                </Button>
                                <Rectangle Height="100"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
                                <TextBox Name="Colorbox" FontSize="16" Foreground="{DynamicResource SystemAccentColorBrush}"
                                         FontFamily="Segoe UI Light" Margin="10,5,10,50" />
                                <Rectangle Name="ColoView" Height="250" Width="auto" Margin="5,5,5,8"></Rectangle>
                                <Button FontSize="20" FontFamily="Segoe UI Bold" Name="SaveElection"
                                        Height="40" TabIndex="10" Margin="5,1"
                                        ToolTip="Save Election Details" Content="Save Election Details"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
