<Page x:Class="UniVoting.Admin.Administrators.AdminAddVotersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="AdminAddVotersPage">
    <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="5" Margin="3"
            Height="583" Width="866">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <TextBox Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                             HorizontalAlignment="Right" Name="Searchterm"
                             FontSize="16" Margin="30 0 0 20" TabIndex="0" />
                    <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="5" Name="BtnSearch" TabIndex="2" ToolTip="search for existing voter">
                        <ui:SymbolIcon Symbol="Search24" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                                       Width="30" Height="30" />
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label FontSize="36" FontFamily="Segoe UI Light" HorizontalAlignment="Center">Setup Voters</Label>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <ScrollViewer Padding="5" Grid.Column="0" Margin="5">
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                                 FontSize="16" Margin="10" Name="TextBoxName" TabIndex="2" />

                        <TextBox Grid.Row="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                                 FontSize="16" Margin="10" Name="TextBoxIndexNumber" TabIndex="3" />
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                            <Button HorizontalAlignment="Left" FontSize="16" FontFamily="Segoe UI SemiBold"
                                    Margin="10" Height="40" Name="BtnImportFile" TabIndex="6"
                                    ToolTip="import voters for file">
                                Import From File
                            </Button>
                            <Button FontSize="14" FontFamily="Segoe UI Bold" HorizontalAlignment="Right"
                                    Margin="10" Height="40" Name="BtnSave" TabIndex="5"
                                    ToolTip="Save Voter">
                                Save
                            </Button>
                        </StackPanel>
                        <Label FontSize="14" Grid.Row="3" Name="ImportedFilename" FontFamily="Segoe UI Light" HorizontalAlignment="Left">Imported Filename:</Label>
                        <Label FontSize="14" Grid.Row="4" Visibility="Hidden" Name="AddedCount" FontFamily="Segoe UI Light" HorizontalAlignment="Left">Added:</Label>
                    </Grid>
                </ScrollViewer>
                <DataGrid Grid.Column="1" AlternatingRowBackground="MediumSlateBlue" Name="VoterGrid" Margin="0,10,10,10"
                          AutoGenerateColumns="True" FontSize="16"
                          Style="{StaticResource AzureDataGrid}" Grid.RowSpan="2">
                </DataGrid>

                <TextBox x:Name="ResetIndexNumber" HorizontalAlignment="Left" Height="54" Margin="10,33,0,0" TextWrapping="Wrap"
                         VerticalAlignment="Top" Width="376" Grid.Row="1" Grid.Column="0" />

                <Button x:Name="BtnReset" Content="Reset" Foreground="{DynamicResource SystemAccentColorBrush}"
                        HorizontalAlignment="Right" Margin="20" Width="72" Height="40" Grid.Row="2"
                        Grid.Column="0" Click="BtnReset_Click" />
            </Grid>
        </Grid>
    </Border>
</Page>
