<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UniVoting.Admin.Administrators.AdminDispensePasswordWindow"
        WindowState="Maximized"
        Title="UNIVOTING">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label FontSize="36" HorizontalAlignment="Center">Dispense Voting Passwords</Label>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
                <TextBox Width="350" FontSize="24" Margin="10" Text="{Binding SearchTerm}" TabIndex="1"/>
                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Command="{Binding RefreshCommand}" TabIndex="2">
                    ðŸ”„
                </Button>
            </StackPanel>
            <Border Grid.Column="0" Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                <StackPanel>
                    <TextBlock FontSize="14" FontWeight="Bold" Margin="5,5,5,0">Search result</TextBlock>
                <DataGrid x:Name="StudentsSearchList" Height="500" AutoGenerateColumns="False" IsReadOnly="True"
                          ItemsSource="{Binding Voters}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Voter Name" Binding="{Binding VoterName}" Width="300"/>
                        <DataGridTextColumn Header="Index Number" Binding="{Binding IndexNumber}" Width="300"/>
                        <DataGridTextColumn Header="Voted" Binding="{Binding Voted}" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
