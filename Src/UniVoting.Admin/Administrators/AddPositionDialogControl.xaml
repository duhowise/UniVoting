<UserControl x:Class="UniVoting.Admin.Administrators.AddPositionDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UniVoting.Admin.Administrators"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="20" Grid.Row="0" FontFamily="Segoe UI Light" HorizontalAlignment="Center">Create Position</Label>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Foreground="{DynamicResource SystemAccentColorBrush}" Width="260"
                     FontSize="24" Margin="10" Name="TextBoxPosition" TabIndex="0" VerticalAlignment="Center" />
            <TextBox Foreground="{DynamicResource SystemAccentColorBrush}" Width="260"
                     FontSize="24" Margin="10" Name="TextBoxFaculty" TabIndex="1" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnSave" Content="Save" Foreground="White" HorizontalAlignment="Right" Margin="20" Width="80" Height="40" />
            <Button x:Name="BtnCancel" Content="Cancel" Foreground="White" HorizontalAlignment="Left" Margin="20" Width="80" Height="40" />
        </StackPanel>
    </Grid>
</UserControl>
