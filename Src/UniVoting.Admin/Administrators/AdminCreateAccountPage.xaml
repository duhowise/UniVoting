<Page x:Class="UniVoting.Admin.Administrators.AdminCreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="600"
      Title="AdminCreateAccountPage">
    <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="5" Margin="3"
            VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label FontSize="24" FontFamily="Segoe UI Light" HorizontalAlignment="Center">Ec Members Account Creation</Label>
            <ScrollViewer Padding="5" Grid.Row="1">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ui:SymbolIcon Symbol="ContactCard24" Grid.Row="0" Grid.Column="0"
                                   Margin="10" Width="50" Height="30"
                                   Foreground="{DynamicResource SystemAccentColorBrush}" />
                    <TextBox Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                             FontSize="16" Margin="5" Name="TextBoxName" TabIndex="0" />
                    <ui:SymbolIcon Symbol="Person24" Grid.Row="1" Grid.Column="0"
                                   Margin="10" Width="50" Height="30"
                                   Foreground="{DynamicResource SystemAccentColorBrush}" />
                    <TextBox Grid.Row="1" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                             FontSize="16" Margin="5" Name="Username" TabIndex="1" />
                    <ui:SymbolIcon Symbol="Key24" Grid.Row="2" Grid.Column="0"
                                   Margin="10" Width="50" Height="30"
                                   Foreground="{DynamicResource SystemAccentColorBrush}" />
                    <PasswordBox Grid.Row="2" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                                 FontSize="16" Margin="10" Name="Password" TabIndex="3" />
                    <PasswordBox Grid.Row="3" Grid.Column="1" Foreground="{DynamicResource SystemAccentColorBrush}" Width="250"
                                 FontSize="16" Margin="10" Name="RepeatPassword" TabIndex="4" />
                    <CheckBox Name="IsChairman" Grid.Row="4" Foreground="{DynamicResource SystemAccentColorBrush}" Margin="10"
                              HorizontalAlignment="Left" FontSize="16" Content="Ec Chairman" Grid.Column="1"></CheckBox>
                    <CheckBox Name="IsPresident" Grid.Row="4" Margin="10" FontSize="16"
                              Foreground="{DynamicResource SystemAccentColorBrush}" HorizontalAlignment="Right"
                              Content="President" Grid.Column="1"></CheckBox>
                    <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Foreground="{DynamicResource SystemAccentColorBrush}"
                            FontSize="20" FontFamily="Segoe UI Bold" Margin="10" Height="40" Name="BtnSave"
                            TabIndex="5" ToolTip="Save New Ec Member">
                        Save
                    </Button>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
