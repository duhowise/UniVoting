<Window x:Class="UniVoting.Admin.Administrators.AdminDispensePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="UNIVOTING" Height="1000" Width="1000">
    <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="5" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Label FontSize="36" FontFamily="Segoe UI Light" HorizontalAlignment="Center">Dispense Voting Passwords</Label>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
                <TextBox Foreground="{DynamicResource SystemAccentColorBrush}" Width="350"
                         FontSize="24" Margin="10" Name="StudentName" TabIndex="1" />

                <Button HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="10" Name="RefreshList" TabIndex="2"
                        ToolTip="Click to Refresh List">
                    <ui:SymbolIcon Symbol="ArrowSync24" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                                   Width="30" Height="30" />
                </Button>
            </StackPanel>
            <GroupBox Header="Search result" Grid.Column="0" Grid.Row="2" Margin="10">
                <ListView x:Name="StudentsSearchList" Height="500">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Voter Name" DisplayMemberBinding="{Binding VoterName}" Width="300"/>
                            <GridViewColumn Header="Index Number" DisplayMemberBinding="{Binding IndexNumber}" Width="300"/>
                            <GridViewColumn Header="Voted" DisplayMemberBinding="{Binding Voted}" Width="300"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </Border>
</Window>
