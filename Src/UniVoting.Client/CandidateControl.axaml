<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UniVoting.Client.CandidateControl"
             Width="250">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="0" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock TextWrapping="Wrap" FontSize="20" Grid.Row="1"
                       Text="{Binding CandidateName}"
                       Margin="-2,0,0,0" HorizontalAlignment="Center" TextAlignment="Center" Width="230"/>
            <Image Grid.Row="2" Source="{Binding CandidateImage}"/>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Label FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0">Vote</Label>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,10" Name="BtnVote" TabIndex="0">
                    üëç
                </Button>
            </StackPanel>
            <Label Content="{Binding RankText}" HorizontalAlignment="Left" FontSize="30"
                   VerticalAlignment="Top" Grid.Row="2"/>
        </Grid>
    </Border>
</UserControl>
