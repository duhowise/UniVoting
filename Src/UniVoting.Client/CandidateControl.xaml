<UserControl x:Class="UniVoting.Client.CandidateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UniVoting.Client"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Width="250" mc:Ignorable="d">
    <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4"
            Padding="0" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" Grid.Row="1" Name="CandidateName"
                       Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI SemiBold"
                       Margin="-2,0,0,0" HorizontalAlignment="Center" TextAlignment="Center" Width="230">Candidate Name</TextBlock>
            <Image Name="CandidateImage" Grid.Row="2" Source="/Resources/images/user.png"></Image>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Label FontSize="18" Foreground="{DynamicResource SystemAccentColorBrush}"
                       VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Segoe UI Light">Vote</Label>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,10"
                        Name="BtnVote" TabIndex="0" Background="{DynamicResource SystemAccentColorBrush}"
                        ToolTip="Vote for this candidate">
                    <ui:SymbolIcon Symbol="ThumbLike24" Width="30" Height="30" Foreground="White" />
                </Button>
            </StackPanel>
            <Label x:Name="Rank" Content="2" HorizontalAlignment="Left" FontSize="30"
                   Foreground="{DynamicResource SystemAccentColorBrush}" FontFamily="Segoe UI Bold"
                   VerticalAlignment="Top" Grid.Row="2"/>
        </Grid>
    </Border>
</UserControl>
