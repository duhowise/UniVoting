<UserControl x:Class="UniVoting.Client.SkipVoteDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UniVoting.Client"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" x:Name="TextBoxConfirm" FontFamily="Segoe UI SemiBold" Margin="10"
                   Foreground="{DynamicResource SystemAccentColorBrush}" HorizontalAlignment="Center"
                   Text="Are you sure you want to skip this vote " TextWrapping="WrapWithOverflow"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button FontSize="20" FontFamily="Segoe UI Bold" Background="{DynamicResource SystemAccentColorBrush}"
                    Foreground="White" Width="100" Margin="10" Height="40" Name="BtnNo" TabIndex="1" ToolTip="No">
                NO
            </Button>
            <Button FontSize="20" FontFamily="Segoe UI Bold" Background="{DynamicResource SystemAccentColorBrush}"
                    Foreground="White" Width="100" Margin="10" Height="40" Name="BtnYes" TabIndex="0" ToolTip="Yes">
                YES
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
