<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UniVoting.LiveView.TileControlSmall">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="2" Margin="2" Background="DodgerBlue">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextWrapping="Wrap" Name="Position" FontSize="30"
                           HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Foreground="White">
                    Loading...
                </TextBlock>
                <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="40" HorizontalAlignment="Center"
                           VerticalAlignment="Bottom" Name="VoteCount" Margin="0,10,0,5" Foreground="White">0</TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
