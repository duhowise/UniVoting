<UserControl x:Class="UniVoting.LiveView.TileControlLarge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UniVoting.LiveView"
             mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4"
                Padding="2" Margin="2" Background="DodgerBlue">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextWrapping="WrapWithOverflow" Name="Position" FontSize="45"
                           HorizontalAlignment="Left" FontFamily="Segoe UI Light" Margin="0"
                           VerticalAlignment="Top" Foreground="White">
                    445454545
                </TextBlock>
                <TextBlock Grid.Row="1" TextWrapping="WrapWithOverflow" FontSize="65" HorizontalAlignment="Center"
                           VerticalAlignment="Bottom" Name="VoteCount" FontFamily="Segoe UI Bold"
                           Margin="0,10,0,5" Foreground="White">0</TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
